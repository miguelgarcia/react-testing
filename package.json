{
  "name": "react-how-to-test",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --watchAll=false --coverage --verbose",
    "test:int": "react-scripts test --testPathPattern=\"int.test.js\" --verbose",
    "test:coverage:int": "react-scripts test --watchAll=false --coverage --testPathPattern=\"int.test.js\" --verbose",
    "test:unit": "react-scripts test --testPathPattern=\"unit.test.js\" --verbose",
    "test:coverage:unit": "react-scripts test --watchAll=false --coverage --testPathPattern=\"unit.test.js\" --verbose",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^5.1.1",
    "fetch-mock": "^9.11.0",
    "node-fetch": "^2.6.1"
  }
}
